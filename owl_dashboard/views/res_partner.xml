<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_inherit_module_name" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">res_partner_list_view</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_partner_kanban_inherit_module" model="ir.ui.view">
        <field name="name">res.partner.view.kanban.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="js_class">res_partner_kanban_view</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_partner_form_inherit_module" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <!-- <xpath expr="//form" position="attributes">
                <attribute name="js_class">res_partner_form_view</attribute>
            </xpath> -->
            <xpath expr="//field[@name='email']" position="replace">
                <field name="email" 
                widget="valid_email"
                 />
            </xpath>
        </field>
    </record>

</odoo>